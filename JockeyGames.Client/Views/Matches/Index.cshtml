@model IEnumerable<JockeyGames.Client.ViewModels.MatchViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="alert alert-success">
    You may now enter in scores of any matches you play (11 points, 21 points, etc.)<br />
    Previously, you could only enter in scores for matches playing to 11 points
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G1P1Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G1P2Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G2P1Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G2P2Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G3P1Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.G3P2Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player2.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G1P1Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G1P2Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G2P1Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G2P2Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G3P1Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.G3P2Score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })@* |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
